{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "vnetAddressPrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Address CIDR Prefix"
      }
    },
    "vnetAddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Address space for Vnet"
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "subnet1PrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Subnet 1 CIDR Prefix"
      }
    },
    "subnet1AddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Subnet 1 Address Space"
      }
    },
    "subnet1Name": {
      "type": "string",
      "metadata": {
        "description": "Subnet 1 Name"
      }
    },
    "subnet2Prefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 2 Prefix"
      }
    },
    "subnet2PrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Subnet 2 CIDR Prefix"
      }
    },
    "subnet2AddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Subnet 2 Address Space"
      }
    },
    "subnet2Name": {
      "type": "string",
      "metadata": {
        "description": "Subnet 2 Name"
      }
    },
    "subnet3Prefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 3 Prefix"
      }
    },
    "subnet3PrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Subnet 3 CIDR Prefix"
      }
    },
    "subnet3Name": {
      "type": "string",
      "metadata": {
        "description": "Subnet 3 Name"
      }
    },
    "subnet3AddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Subnet 3 Address Space"
      }
    },
    "subnet4Prefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 4 Prefix"
      }
    },
    "subnet4PrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Subnet 4 CIDR Prefix"
      }
    },
    "subnet4Name": {
      "type": "string",
      "metadata": {
        "description": "Subnet 4 Name"
      }
    },
    "subnet4AddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Subnet 4 Address Space"
      }
    },
    "subnet5Prefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 5 Prefix"
      }
    },
    "subnet5PrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Subnet 5 CIDR Prefix"
      }
    },
    "subnet5Name": {
      "type": "string",
      "metadata": {
        "description": "Subnet 5 Name"
      }
    },
    "subnet5AddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Subnet 5 Address Space"
      }
    },
    "customDNSIP": {
      "type": "string",
      "metadata": {
        "description": "IP Address of Custom DNS Server"
      }
    }
  },
  "variables": {
    "apiVersion": "2015-06-15"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVersion')]",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressSpace')]"
          ]
        },
        "dhcpOptions": {
          "dnsServers": [
            "[parameters('customDNSIP')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('subnet1Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet1AddressSpace')]"
            }
          },
          {
            "name": "[parameters('subnet2Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet2AddressSpace')]"
            }
          },
          {
            "name": "[parameters('subnet3Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet3AddressSpace')]"
            }
          },
          {
            "name": "[parameters('subnet4Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet4AddressSpace')]"
            }
          },
          {
            "name": "[parameters('subnet5Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet5AddressSpace')]"
            }
          }
        ]
      }
    }
  ]
}
