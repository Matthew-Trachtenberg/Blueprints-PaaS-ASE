{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "vnetAddressPrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Address CIDR Prefix"
      }
    },
    "vnetAddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Address space for Vnet"
      }
    },
    "WAFSubnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "WAFSubnetPrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Subnet 1 CIDR Prefix"
      }
    },
    "WAFSubnetAddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Subnet 1 Address Space"
      }
    },
    "WAFSubnetName": {
      "type": "string",
      "metadata": {
        "description": "Subnet 1 Name"
      }
    },
    "WebAppSubnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 2 Prefix"
      }
    },
    "WebAppSubnetPrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Subnet 2 CIDR Prefix"
      }
    },
    "WebAppSubnetAddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Subnet 2 Address Space"
      }
    },
    "WebAppSubnetName": {
      "type": "string",
      "metadata": {
        "description": "Subnet 2 Name"
      }
    },
    "APIAppSubnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 3 Prefix"
      }
    },
    "APIAppSubnetPrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Subnet 3 CIDR Prefix"
      }
    },
    "APIAppSubnetName": {
      "type": "string",
      "metadata": {
        "description": "Subnet 3 Name"
      }
    },
    "APIAppSubnetAddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Subnet 3 Address Space"
      }
    },
    "RedisCacheSubnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 4 Prefix"
      }
    },
    "RedisCacheSubnetPrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Subnet 4 CIDR Prefix"
      }
    },
    "RedisCacheSubnetName": {
      "type": "string",
      "metadata": {
        "description": "Subnet 4 Name"
      }
    },
    "RedisCacheSubnetAddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Subnet 4 Address Space"
      }
    },
    "GatewaySubnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 5 Prefix"
      }
    },
    "GatewaySubnetPrefixCIDR": {
      "type": "int",
      "metadata": {
        "description": "Subnet 5 CIDR Prefix"
      }
    },
    "GatewaySubnetName": {
      "type": "string",
      "metadata": {
        "description": "Gateway Subnet Name"
      }
    },
    "GatewayAddressSpace": {
      "type": "string",
      "metadata": {
        "description": "Subnet 5 Address Space"
      }
    },
    "GatewayName": {
      "type": "string",
      "metadata": {
        "description": "Name for the new gateway"
      }
    },
    "gatewayPublicIPName": {
      "type": "string",
      "metadata": {
        "description": "Name for public IP object used for the new gateway"
      }
    },
    "customDNSIP": {
      "type": "string",
      "metadata": {
        "description": "IP Address of Custom DNS Server"
      }
    },
    "GatewayType": {
      "type": "string",
      "metadata": {
        "description": "Set either VPN or ExpressRoute"
      }
    },
    "VPNType": {
      "type": "string",
      "metadata": {
        "description": "RouteBased or PolicyBased"
      }
    },
    "enableBGP": {
      "type": "bool",
      "metadata": {
        "description": "RouteBased or PolicyBased"
      }
    }
  },
  "variables": {
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetName'))]",
    "gatewaySubnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('GatewaySubnetName'))]"
  },
  "resources": [
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('gatewayPublicIPName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressSpace')]"
          ]
        },
        "dhcpOptions": {
          "dnsServers": [
            "[parameters('customDNSIP')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('WAFSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('WAFSubnetAddressSpace')]"
            }
          },
          {
            "name": "[parameters('WebAppSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('WebAppSubnetAddressSpace')]"
            }
          },
          {
            "name": "[parameters('APIAppSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('APIAppSubnetAddressSpace')]"
            }
          },
          {
            "name": "[parameters('RedisCacheSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('RedisCacheSubnetAddressSpace')]"
            }
          },
          {
            "name": "[parameters('GatewaySubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('GatewayAddressSpace')]"
            }
          }
        ]
      }
    },
          {
            "apiVersion": "2016-03-30",
            "type": "Microsoft.Network/virtualNetworkGateways",
            "name": "[parameters('GatewayName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
              "[concat('Microsoft.Network/publicIPAddresses/', parameters('gatewayPublicIPName'))]",
              "[concat('Microsoft.Network/virtualNetworks/', parameters('vnetName'))]"
            ],
            "properties": {
              "ipConfigurations": [
                {
                  "properties": {
                    "privateIPAllocationMethod": "Dynamic",
                    "subnet": {
                      "id": "[variables('gatewaySubnetRef')]"
                    },
                    "publicIPAddress": {
                      "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('gatewayPublicIPName'))]"
                    }
                  },
                  "name": "vnetGatewayConfig"
                }
              ],
              "gatewayType": "[parameters('GatewayType')]",
              "vpnType": "[parameters('vpnType')]",
              "enableBgp": "[parameters('enableBGP')]"
            }
          }
        ]
      }