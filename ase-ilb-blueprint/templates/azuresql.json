{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sqlAdministratorLogin": {
      "type": "string",
      "metadata": {
        "description": "The administrator username of the SQL Server."
      }
    },
    "sqlAdministratorLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The administrator password of the SQL Server."
      }
    },
    "Region": {
      "type": "string",
      "metadata": {
        "description": "The Location to build resources."
      }
    },
    "sqlServerName": {
      "type": "string",
      "metadata": {
        "description": "The name of the SQl server"
      }
    },
    "databaseName": {
      "type": "string",
      "metadata": {
        "description": "The name of the SQl Database"
      }
    },
    "databaseEdition": {
      "type": "string",
      "metadata": {
        "description": "The edition of the SQL Database"
      }
    },
    "databaseServiceObjectiveName": {
      "type": "string",
      "metadata": {
        "description": "The name of the ServiceObjective"
      }
    }
  },
  "variables": {
    "databaseCollation": "SQL_Latin1_General_CP1_CI_AS",
    "transparentDataEncryption": "Enabled"
  },
    "resources": [
      {
        "name": "[parameters('sqlServerName')]",
        "type": "Microsoft.Sql/servers",
        "apiVersion": "2014-04-01-preview",
        "location": "[parameters('Region')]",
        "tags": {
          "displayName": "SqlServer"
        },
        "properties": {
          "administratorLogin": "[parameters('sqlAdministratorLogin')]",
          "administratorLoginPassword": "[parameters('sqlAdministratorLoginPassword')]",
          "version": "12.0"
        },
        "resources": [
          {
            "name": "[parameters('databaseName')]",
            "type": "databases",
            "apiVersion": "2015-01-01",
            "location": "[parameters('Region')]",
            "tags": {
              "displayName": "Database"
            },
            "properties": {
              "edition": "[parameters('databaseEdition')]",
              "collation": "[variables('databaseCollation')]",
              "requestedServiceObjectiveName": "[parameters('databaseServiceObjectiveName')]"
            },
            "dependsOn": [
              "[parameters('sqlServerName')]"
            ],
            "resources": [
              {
                "comments": "Transparent Data Encryption",
                "name": "current",
                "type": "transparentDataEncryption",
                "apiVersion": "2014-04-01-preview",
                "properties": {
                  "status": "[variables('transparentDataEncryption')]"
                },
                "dependsOn": [
                  "[parameters('databaseName')]"
                ]
              }
            ]
          },
          {
            "name": "AllowAllMicrosoftAzureIps",
            "type": "firewallrules",
            "apiVersion": "2014-04-01",
            "location": "[parameters('Region')]",
            "properties": {
              "endIpAddress": "0.0.0.0",
              "startIpAddress": "0.0.0.0"
            },
            "dependsOn": [
              "[parameters('sqlServerName')]"
            ]
          },
          {
            "name": "AllowIlbAseWebAppOutboundIP",
            "type": "firewallrules",
            "apiVersion": "2014-04-01",
            "location": "[parameters('Region')]",
            "properties": {
              "endIpAddress": "0.0.0.0",
              "startIpAddress": "0.0.0.0"
            },
            "dependsOn": [
              "[parameters('sqlServerName')]"
            ]
          }
        ]
      }
    ]
  }