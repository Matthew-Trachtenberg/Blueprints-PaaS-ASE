{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "defaultValue": "VNet1",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "vnetAddressPrefixCIDR": {
      "type": "int",
      "defaultValue": 16,
      "maxValue": 32,
      "metadata": {
        "description": "Address CIDR prefix"
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.0.0.0",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "subnet1PrefixCIDR": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 1 CIDR Prefix"
      }
    },
    "subnet1Name": {
      "type": "string",
      "defaultValue": "WAFSubnet",
      "metadata": {
        "description": "Subnet 1 Name"
      }
    },
    "subnet2Prefix": {
      "type": "string",
      "defaultValue": "10.0.1.0",
      "metadata": {
        "description": "Subnet 2 Prefix"
      }
    },
    "subnet2PrefixCIDR": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 2 CIDR Prefix"
      }
    },
    "subnet2Name": {
      "type": "string",
      "defaultValue": "WebAppSubnet",
      "metadata": {
        "description": "Subnet 2 Name"
      }
    },
    "subnet3Prefix": {
      "type": "string",
      "defaultValue": "10.0.2.0",
      "metadata": {
        "description": "Subnet 3 Prefix"
      }
    },
    "subnet3PrefixCIDR": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 3 CIDR Prefix"
      }
    },
    "subnet3Name": {
      "type": "string",
      "defaultValue": "APIAppSubnet",
      "metadata": {
        "description": "Subnet 3 Name"
      }
    },
    "subnet4Prefix": {
      "type": "string",
      "defaultValue": "10.0.3.0",
      "metadata": {
        "description": "Subnet 4 Prefix"
      }
    },
    "subnet4PrefixCIDR": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 4 CIDR Prefix"
      }
    },
    "subnet4Name": {
      "type": "string",
      "defaultValue": "RedisCacheSubnet",
      "metadata": {
        "description": "Subnet 4 Name"
      }
    },
    "GatewaySubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.4.0",
      "metadata": {
        "description": "Subnet 5 Prefix"
      }
    },
    "GatewaySubnetPrefixCIDR": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 5 CIDR Prefix"
      }
    },
    "GatewaySubnetName": {
      "type": "string",
      "defaultValue": "GatewaySubnet",
      "metadata": {
        "description": "Subnet 5 Name"
      }
    },
    "gatewayName": {
      "type": "string",
      "defaultValue": "gateway1",
      "metadata": {
        "description": "Name for the new gateway"
      }
    },
    "gatewayPublicIPName": {
      "type": "string",
      "defaultValue": "GWPublicIP",
      "metadata": {
        "description": "Name for public IP object used for the new gateway"
      }
    },
    "localGatewayName": {
      "type": "string",
      "defaultValue": "localGateway",
      "metadata": {
        "description": "Name for gateway connected to other VNet/on-prem network"
      }
    },
    "localGatewayIPAddress": {
      "type": "string",
      "defaultValue": "192.0.0.0",
      "metadata": {
        "description": "Public IP address for the gateway to connect to (from other VNet/on-prem)"
      }
    },
    "localGatewayAddressCIDRPrefix": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "CIDR block for remote network"
      }
    },
    "customDNSIP": {
      "type": "string",
      "defaultValue": "10.0.0.4",
      "metadata": {
        "description": "IP Address of Custom DNS Server"
      }
    },
    "dnsOption": {
      "type": "string",
      "defaultValue": "customdns",
      "metadata": {
        "description": "Pick either azuredns or customdns. This is Case Sensitive. "
      }
    },
    "redisCacheName": {
      "type": "string",
      "defaultValue": "rediscachepremium",
      "metadata": {
        "description": "The name of the Azure Redis Cache to create."
      }
    },
    "redisShardCount": {
      "type": "int",
      "metadata": {
        "description": "Number of highly available shards to create in the cluster. Requires Premium SKU. Set to 0 to not set up clustering."
      }
    },
    "redisCacheCapacity": {
      "type": "int",
      "allowedValues": [
        1,
        2,
        3,
        4
      ],
      "defaultValue": 1,
      "metadata": {
        "description": "The size of the new Azure Redis Cache instance. Valid family and capacity combinations are (C0..C6, P1..P4)."
      }
    },
    "virtualNetwork": {
      "type": "string",
      "metadata": {
        "description": "Name of an existing virtual network to join, in same subscription and region. Requires Premium SKU."
      }
    },
    "subnet": {
      "type": "string",
      "metadata": {
        "description": "Name of an existing subnet to join in the virtual network. Requires configuring a virtualNetwork."
      }
    },
    "redisCacheStaticIP": {
      "type": "string",
      "metadata": {
        "description": "The static IP address the redis cache should have, for a cache in a virtual network subnet. Requires configuring a virtualNetwork."
      }
    },
    "existingDiagnosticsStorageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of an existing storage account for diagnostics. Must be in the same subscription."
      }
    },
    "enableNonSslPort": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Set to true to allow access to redis on port 6379, without SSL tunneling (less secure)."
      }
    }
  },
  "variables": {
    "Region": "[resourceGroup().location]",
    "TemplateURIs": "https://raw.githubusercontent.com/mayurshintre/Blueprints/master/ase-ilb-blueprint/templates/",
    "VaultName": "[concat('ILBaseVault',uniqueString(resourceGroup().id))]",
    "VaultSKU": "Premium",
    "vnetAddressSpace": "[concat(parameters('vnetAddressPrefix'), '/', parameters('vnetAddressPrefixCIDR'))]",
    "subnet1AddressSpace": "[concat(parameters('subnet1Prefix'), '/', parameters('subnet1PrefixCIDR'))]",
    "subnet2AddressSpace": "[concat(parameters('subnet2Prefix'), '/', parameters('subnet2PrefixCIDR'))]",
    "subnet3AddressSpace": "[concat(parameters('subnet3Prefix'), '/', parameters('subnet3PrefixCIDR'))]",
    "subnet4AddressSpace": "[concat(parameters('subnet4Prefix'), '/', parameters('subnet4PrefixCIDR'))]",
    "GatewayAddressSpace": "[concat(parameters('GatewaySubnetPrefix'), '/', parameters('GatewaySubnetPrefixCIDR'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "KeyVault",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('TemplateURIs'),'keyvault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "VaultName": { "value": "[variables('VaultName')]" },
          "Region": { "value": "[variables('Region')]" },
          "VaultSku": { "value": "[variables('VaultSKU')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "Vnet",
      "apiVersion": "2016-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('TemplateURIs'),'newvnet',parameters('dnsOption'),'.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnetName": { "value": "[parameters('vnetName')]" },
          "vnetAddressSpace": { "value": "[variables('vnetAddressSpace')]" },
          "vnetAddressPrefix": { "value": "[parameters('vnetAddressPrefix')]" },
          "vnetAddressPrefixCIDR": { "value": "[parameters('vnetAddressPrefixCIDR')]" },
          "subnet1AddressSpace": { "value": "[variables('subnet1AddressSpace')]" },
          "subnet1Name": { "value": "[parameters('subnet1name')]" },
          "subnet1PrefixCIDR": { "value": "[parameters('subnet1PrefixCIDR')]" },
          "subnet1Prefix": { "value": "[parameters('subnet1Prefix')]" },
          "subnet2AddressSpace": { "value": "[variables('subnet2AddressSpace')]" },
          "subnet2Name": { "value": "[parameters('subnet2Name')]" },
          "subnet2Prefix": { "value": "[parameters('subnet2Prefix')]" },
          "subnet2PrefixCIDR": { "value": "[parameters('subnet2PrefixCIDR')]" },
          "subnet3AddressSpace": { "value": "[variables('subnet3AddressSpace')]" },
          "subnet3Name": { "value": "[parameters('subnet3Name')]" },
          "subnet3Prefix": { "value": "[parameters('subnet3Prefix')]" },
          "subnet3PrefixCIDR": { "value": "[parameters('subnet3PrefixCIDR')]" },
          "subnet4AddressSpace": { "value": "[variables('subnet4AddressSpace')]" },
          "subnet4Name": { "value": "[parameters('subnet4Name')]" },
          "subnet4Prefix": { "value": "[parameters('subnet4Prefix')]" },
          "subnet4PrefixCIDR": { "value": "[parameters('subnet4PrefixCIDR')]" },
          "GatewayAddressSpace": { "value": "[variables('GatewayAddressSpace')]" },
          "GatewaySubnetName": { "value": "[parameters('GatewaySubnetName')]" },
          "GatewaySubnetPrefix": { "value": "[parameters('GatewaySubnetPrefix')]" },
          "GatewaySubnetPrefixCIDR": { "value": "[parameters('GatewaySubnetPrefixCIDR')]" },
          "gatewayName": { "value": "[parameters('gatewayName')]" },
          "gatewayPublicIPName": { "value": "[parameters('gatewayPublicIPName')]" },
          "localGatewayName": { "value": "[parameters('localGatewayName')]" },
          "localGatewayIPAddress": { "value": "[parameters('localGatewayIPAddress')]" },
          "localGatewayAddressCIDRPrefix": { "value": "[parameters('localGatewayAddressCIDRPrefix')]" },
          "customDNSIP": { "value": "[parameters('customDNSIP')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "RedisCachePremium",
      "apiVersion": "2016-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('TemplateURIs'),'rediscache.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "redisCacheName": { "value": "[parameters('vnetName')]" },
          "Region": { "value": "[variables('Region')]" },
          "VaultSku": { "value": "[variables('VaultSKU')]" }
        }
      }
    }

  ]
 }