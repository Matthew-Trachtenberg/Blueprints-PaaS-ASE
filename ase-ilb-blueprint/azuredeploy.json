{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "defaultValue": "VNet1",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "vnetAddressPrefixCIDR": {
      "type": "int",
      "defaultValue": 16,
      "maxValue": 32,
      "metadata": {
        "description": "Address CIDR prefix"
      }
    },
    "WAFSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "WAFSubnetPrefixCIDR": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 1 CIDR Prefix"
      }
    },
    "WAFSubnetName": {
      "type": "string",
      "defaultValue": "WAFSubnet",
      "metadata": {
        "description": "Subnet 1 Name"
      }
    },
    "WebAppSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.1.0",
      "metadata": {
        "description": "Subnet 2 Prefix"
      }
    },
    "WebAppSubnetPrefixCIDR": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 2 CIDR Prefix"
      }
    },
    "WebAppSubnetName": {
      "type": "string",
      "defaultValue": "WebAppSubnet",
      "metadata": {
        "description": "Subnet 2 Name"
      }
    },
    "APIAppSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.2.0",
      "metadata": {
        "description": "Subnet 3 Prefix"
      }
    },
    "APIAppSubnetPrefixCIDR": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 3 CIDR Prefix"
      }
    },
    "APIAppSubnetName": {
      "type": "string",
      "defaultValue": "APIAppSubnet",
      "metadata": {
        "description": "Subnet 3 Name"
      }
    },
    "RedisCacheSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.3.0",
      "metadata": {
        "description": "Subnet 4 Prefix"
      }
    },
    "RedisCacheSubnetPrefixCIDR": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 4 CIDR Prefix"
      }
    },
    "RedisCacheSubnetName": {
      "type": "string",
      "defaultValue": "RedisCacheSubnet",
      "metadata": {
        "description": "Subnet 4 Name"
      }
    },
    "GatewaySubnetPrefix": {
      "type": "string",
      "defaultValue": "10.0.4.0",
      "metadata": {
        "description": "Subnet 5 Prefix"
      }
    },
    "GatewaySubnetPrefixCIDR": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 5 CIDR Prefix"
      }
    },
    "GatewaySubnetName": {
      "type": "string",
      "defaultValue": "GatewaySubnet",
      "metadata": {
        "description": "Subnet 5 Name"
      }
    },
    "GatewayName": {
      "type": "string",
      "defaultValue": "gateway1",
      "metadata": {
        "description": "Name for the new gateway"
      }
    },
    "gatewayPublicIPName": {
      "type": "string",
      "defaultValue": "GWPublicIP",
      "metadata": {
        "description": "Name for public IP object used for the new gateway"
      }
    },
    "localGatewayName": {
      "type": "string",
      "defaultValue": "localGateway",
      "metadata": {
        "description": "Name for gateway connected to other VNet/on-prem network"
      }
    },
    "localGatewayIPAddress": {
      "type": "string",
      "defaultValue": "192.0.0.0",
      "metadata": {
        "description": "Public IP address for the gateway to connect to (from other VNet/on-prem)"
      }
    },
    "localGatewayAddressCIDRPrefix": {
      "type": "int",
      "defaultValue": 24,
      "maxValue": 32,
      "metadata": {
        "description": "CIDR block for remote network"
      }
    },
    "customDNSIP": {
      "type": "string",
      "defaultValue": "10.0.0.4",
      "metadata": {
        "description": "IP Address of Custom DNS Server"
      }
    },
    "dnsOption": {
      "type": "string",
      "defaultValue": "customdns",
      "metadata": {
        "description": "Pick either azuredns or customdns. This is Case Sensitive. "
      }
    }
  },
  "variables": {
    "Region": "[resourceGroup().location]",
    "TemplateURIs": "https://raw.githubusercontent.com/mayurshintre/Blueprints/master/ase-ilb-blueprint/templates/",
    "VaultName": "[concat('ILBaseVault',uniqueString(resourceGroup().id))]",
    "VaultSKU": "Premium",
    "vnetAddressSpace": "[concat(parameters('vnetAddressPrefix'), '/', parameters('vnetAddressPrefixCIDR'))]",
    "WAFSubnetAddressSpace": "[concat(parameters('WAFSubnetPrefix'), '/', parameters('WAFSubnetPrefixCIDR'))]",
    "WebAppSubnetAddressSpace": "[concat(parameters('WebAppSubnetPrefix'), '/', parameters('WebAppSubnetPrefixCIDR'))]",
    "APIAppSubnetAddressSpace": "[concat(parameters('APIAppSubnetPrefix'), '/', parameters('APIAppSubnetPrefixCIDR'))]",
    "RedisCacheSubnetAddressSpace": "[concat(parameters('RedisCacheSubnetPrefix'), '/', parameters('RedisCacheSubnetPrefixCIDR'))]",
    "GatewayAddressSpace": "[concat(parameters('GatewaySubnetPrefix'), '/', parameters('GatewaySubnetPrefixCIDR'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "KeyVault",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('TemplateURIs'),'keyvault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "VaultName": { "value": "[variables('VaultName')]" },
          "Region": { "value": "[variables('Region')]" },
          "VaultSku": { "value": "[variables('VaultSKU')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "Vnet",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('TemplateURIs'),'newvnet',parameters('dnsOption'),'.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnetName": { "value": "[parameters('vnetName')]" },
          "vnetAddressSpace": { "value": "[variables('vnetAddressSpace')]" },
          "vnetAddressPrefix": { "value": "[parameters('vnetAddressPrefix')]" },
          "vnetAddressPrefixCIDR": { "value": "[parameters('vnetAddressPrefixCIDR')]" },
          "WAFSubnetAddressSpace": { "value": "[variables('WAFSubnetAddressSpace')]" },
          "WAFSubnetName": { "value": "[parameters('WAFSubnetName')]" },
          "WAFSubnetPrefixCIDR": { "value": "[parameters('WAFSubnetPrefixCIDR')]" },
          "WAFSubnetPrefix": { "value": "[parameters('WAFSubnetPrefix')]" },
          "WebAppSubnetAddressSpace": { "value": "[variables('WebAppSubnetAddressSpace')]" },
          "WebAppSubnetName": { "value": "[parameters('WebAppSubnetName')]" },
          "WebAppSubnetPrefix": { "value": "[parameters('WebAppSubnetPrefix')]" },
          "WebAppSubnetPrefixCIDR": { "value": "[parameters('WebAppSubnetPrefixCIDR')]" },
          "APIAppSubnetAddressSpace": { "value": "[variables('APIAppSubnetAddressSpace')]" },
          "APIAppSubnetName": { "value": "[parameters('APIAppSubnetName')]" },
          "APIAppSubnetPrefix": { "value": "[parameters('APIAppSubnetPrefix')]" },
          "APIAppSubnetPrefixCIDR": { "value": "[parameters('APIAppSubnetPrefixCIDR')]" },
          "RedisCacheSubnetAddressSpace": { "value": "[variables('RedisCacheSubnetAddressSpace')]" },
          "RedisCacheSubnetName": { "value": "[parameters('RedisCacheSubnetName')]" },
          "RedisCacheSubnetPrefix": { "value": "[parameters('RedisCacheSubnetPrefix')]" },
          "RedisCacheSubnetPrefixCIDR": { "value": "[parameters('RedisCacheSubnetPrefixCIDR')]" },
          "GatewayAddressSpace": { "value": "[variables('GatewayAddressSpace')]" },
          "GatewaySubnetName": { "value": "[parameters('GatewaySubnetName')]" },
          "GatewaySubnetPrefix": { "value": "[parameters('GatewaySubnetPrefix')]" },
          "GatewaySubnetPrefixCIDR": { "value": "[parameters('GatewaySubnetPrefixCIDR')]" },
          "GatewayName": { "value": "[parameters('GatewayName')]" },
          "gatewayPublicIPName": { "value": "[parameters('gatewayPublicIPName')]" },
          "localGatewayName": { "value": "[parameters('localGatewayName')]" },
          "localGatewayIPAddress": { "value": "[parameters('localGatewayIPAddress')]" },
          "localGatewayAddressCIDRPrefix": { "value": "[parameters('localGatewayAddressCIDRPrefix')]" },
          "customDNSIP": { "value": "[parameters('customDNSIP')]" }
        }
      }
    }
  ]
 }
