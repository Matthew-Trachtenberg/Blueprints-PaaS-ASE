{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "defaultValue": "VNet1",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "vnetAddressPrefixCIDR": {
      "type": "int",
      "defaultValue": "16",
      "maxValue": 32,
      "metadata": {
        "description": "Address CIDR prefix"
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.0.0.0",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "subnet1PrefixCIDR": {
      "type": "int",
      "defaultValue": "24",
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 1 CIDR Prefix"
      }
    },
    "subnet1Name": {
      "type": "string",
      "defaultValue": "Subnet1",
      "metadata": {
        "description": "Subnet 1 Name"
      }
    },
    "subnet2Prefix": {
      "type": "string",
      "defaultValue": "10.0.1.0",
      "metadata": {
        "description": "Subnet 2 Prefix"
      }
    },
    "subnet2PrefixCIDR": {
      "type": "string",
      "defaultValue": "24",
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 2 CIDR Prefix"
      }
    },
    "subnet2Name": {
      "type": "string",
      "defaultValue": "Subnet2",
      "metadata": {
        "description": "Subnet 2 Name"
      }
    },
    "subnet3Prefix": {
      "type": "string",
      "defaultValue": "10.0.1.0",
      "metadata": {
        "description": "Subnet 3 Prefix"
      }
    },
    "subnet3PrefixCIDR": {
      "type": "int",
      "defaultValue": "24",
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 3 CIDR Prefix"
      }
    },
    "subnet3Name": {
      "type": "string",
      "defaultValue": "Subnet3",
      "metadata": {
        "description": "Subnet 3 Name"
      }
    },
    "subnet4Prefix": {
      "type": "string",
      "defaultValue": "10.0.1.0",
      "metadata": {
        "description": "Subnet 4 Prefix"
      }
    },
    "subnet4PrefixCIDR": {
      "type": "string",
      "defaultValue": "24",
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 4 CIDR Prefix"
      }
    },
    "subnet4Name": {
      "type": "string",
      "defaultValue": "Subnet4",
      "metadata": {
        "description": "Subnet 4 Name"
      }
    },
    "subnet5Prefix": {
      "type": "string",
      "defaultValue": "10.0.1.0",
      "metadata": {
        "description": "Subnet 5 Prefix"
      }
    },
    "subnet5PrefixCIDR": {
      "type": "string",
      "defaultValue": "24",
      "maxValue": 32,
      "metadata": {
        "description": "Subnet 5 CIDR Prefix"
      }
    },
    "subnet5Name": {
      "type": "string",
      "defaultValue": "Subnet5",
      "metadata": {
        "description": "Subnet 5 Name"
      }
    },
    "customDNSIP": {
      "type": "string",
      "defaultValue": "10.0.0.4",
      "metadata": {
        "description": "IP Address of Custom DNS Server"
      }
    },
    "dnsOption": {
      "type": "string",
      "defaultValue": "customdns",
      "metadata": {
        "description": "Pick either azuredns or customdns. This is Case Sensitive. "
      }
    }
  },
  "variables": {
    "Region": "[resourceGroup().location]",
    "TemplateURIs": "https://raw.githubusercontent.com/mayurshintre/Blueprints/master/ase-ilb-blueprint/templates/",
    "VaultName": "[concat('ILBaseVault',uniqueString(resourceGroup().id))]",
    "VaultSKU": "Premium",
    "vnetAddressSpace": "[concat(parameters('vnetAddressPrefix'), '/', parameters('vnetAddressPrefixCIDR'))]",
    "subnet1AddressSpace": "[concat(parameters('subnet1Prefix'), '/', parameters('subnet1PrefixCIDR'))]",
    "subnet2AddressSpace": "[concat(parameters('subnet2Prefix'), '/', parameters('subnet2PrefixCIDR'))]",
    "subnet3AddressSpace": "[concat(parameters('subnet3Prefix'), '/', parameters('subnet3PrefixCIDR'))]",
    "subnet4AddressSpace": "[concat(parameters('subnet4Prefix'), '/', parameters('subnet4PrefixCIDR'))]",
    "subnet5AddressSpace": "[concat(parameters('subnet5Prefix'), '/', parameters('subnet5PrefixCIDR'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "KeyVault",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('TemplateURIs'),'keyvault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "VaultName": { "value": "[variables('VaultName')]" },
          "Region": { "value": "[variables('Region')]" },
          "VaultSku": { "value": "[variables('VaultSKU')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "Vnet",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('TemplateURIs'),'newvnet',parameters('dnsOption'),'.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnetName": { "value": "[parameters('vnetName')]" },
          "vnetAddressSpace": { "value": "[variables('vnetAddressSpace')]" },
          "vnetAddressPrefix": { "value": "[parameters('vnetAddressPrefix')]" },
          "vnetAddressPrefixCIDR": { "value": "[parameters('vnetAddressPrefixCIDR')]" },
          "subnet1AddressSpace": { "value": "[variables('subnet1AddressSpace')]" },
          "subnet1Name": { "value": "[parameters('subnet1name')]" },
          "subnet1PrefixCIDR": { "value": "[parameters('subnet1PrefixCIDR')]" },
          "subnet1Prefix": { "value": "[parameters('subnet1Prefix')]" },
          "subnet2AddressSpace": { "value": "[variables('subnet2AddressSpace')]" },
          "subnet2Name": { "value": "[parameters('subnet2Name')]" },
          "subnet2Prefix": { "value": "[parameters('subnet2Prefix')]" },
          "subnet2PrefixCIDR": { "value": "[parameters('subnet2PrefixCIDR')]" },
          "subnet3AddressSpace": { "value": "[variables('subnet3AddressSpace')]" },
          "subnet3Name": { "value": "[parameters('subnet3Name')]" },
          "subnet3Prefix": { "value": "[parameters('subnet3Prefix')]" },
          "subnet3PrefixCIDR": { "value": "[parameters('subnet3PrefixCIDR')]" },
          "subnet4AddressSpace": { "value": "[variables('subnet4AddressSpace')]" },
          "subnet4Name": { "value": "[parameters('subnet4Name')]" },
          "subnet4Prefix": { "value": "[parameters('subnet4Prefix')]" },
          "subnet4PrefixCIDR": { "value": "[parameters('subnet4PrefixCIDR')]" },
          "subnet5AddressSpace": { "value": "[variables('subnet5AddressSpace')]" },
          "subnet5Name": { "value": "[parameters('subnet5Name')]" },
          "subnet5Prefix": { "value": "[parameters('subnet5Prefix')]" },
          "subnet5PrefixCIDR": { "value": "[parameters('subnet5PrefixCIDR')]" },
          "customDNSIP": { "value": "[parameters('customDNSIP')]" }
        }
      }
    }
  ]
 }
